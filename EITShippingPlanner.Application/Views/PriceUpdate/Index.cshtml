@{
    ViewData["Title"] = "Price Update";
}

@model EITShippingPlanner.Application.Models.PriceUpdateModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>HTML 5 Boilerplate</title>

    <!-- External CSS -->
    <link rel="stylesheet" href="~/styles/styles.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class="container header-container py-4">
        <div class="d-flex justify-content-between align-items-center">
            <div class="logo-group d-flex align-items-center">
                <img src="~/assets/logo/logo.png">
                <h1 class="main-header px-3">East India Trading Co.</h1>
            </div>
            <a href="~/">
                <div class="update-button button-shadow">
                    Route Calculator
                </div>
            </a>
        </div>
    </div>

    @using (MvcForm form = Html.BeginForm(FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="container main-container p-4">
            @if (TempData["updated"] != null && (bool)TempData["updated"] == true)
            {
                <div class="alert alert-success" role="alert">
                    Update Successfully
                    <button style="margin-top:-2pt" type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            <h4 class="field-label mb-1 ms-3">Price Table</h4>
            <div class="container pt-5">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th scope="col" colspan="3" class="field-label">Season</th>
                            <th scope="col" colspan="3" class="field-label">Under 10kg</th>
                            <th scope="col" colspan="3" class="field-label">10 to 50 kg</th>
                            <th scope="col" colspan="3" class="field-label">50kg or more</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <th scope="row">November - April</th>
                            <td colspan="3">
                                <input asp-for="@Model.Under10InNovToApr" type="number" class="form-control button-shadow" placeholder="$8">
                            </td>
                            <td colspan="3">
                                <input asp-for="@Model.From10To50InNovToApr" type="number" class="form-control button-shadow" placeholder="$8">
                            </td>
                            <td colspan="3">
                                <input asp-for="@Model.Above50InNovToApr" type="number" class="form-control button-shadow" placeholder="$8">
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">May - October</th>
                            <td colspan="3">
                                <input asp-for="@Model.Under10InMayToOct" type="number" class="form-control button-shadow" placeholder="$5">
                            </td>
                            <td colspan="3">
                                <input asp-for="@Model.From10To50InMayToOct" type="number" class="form-control button-shadow" placeholder="$5">
                            </td>
                            <td colspan="3">
                                <input asp-for="@Model.Above50InMayToOct" type="number" class="form-control button-shadow" placeholder="$5">
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="container d-flex flex-row-reverse">
                <button type="submit" id="submit-button" class="submit-button button-shadow">
                    Update
                </button>
            </div>
        </div>
    }

</body>
</html>
